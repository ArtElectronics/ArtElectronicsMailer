  link_1 = alink '"Три сестры"', "http://artelectronics.ru/blogs/lexus-zakhodit-na-territoriyu-teatra"
  link_2 = alink 'читаем книгу', "http://artelectronics.ru/posts/dzhejson-merkoski-kniga-2-0-proshloe-nastoyaschee-i-buduschee-elektronnykh-knig-glazami-sozdatelya-kindle"
